.Footer
	display flex
	flex-direction row
	width 100vw
	height 210px
	color rgba(#b3b3b3, 0.8)
	background-color #333
	justify-content center
	padding 30px 0px
	&-wrapper
		display flex
		flex-direction row
		justify-content space-between
		align-items center
		width 1024px
		height 100%
		//padding 20px
	&-social
		display flex
		flex-direction column
		width 33%
		height 100%
		justify-content flex-start
		align-items center
	&-description
		display flex
		flex-direction column
		width 33%
		height 100%
		justify-content flex-end
		align-items center
	&-tools
		display flex
		flex-direction column
		width 33%
		height 100%
		justify-content flex-end
		align-items flex-end
	&-menu
		display flex
		flex-direction row
		list-style-type none
		justify-content space-around
		//width 400px
		margin 0px
		padding 0px


.list
	font-size 1.7rem
	width 100%
	justify-content space-around
	margin-top 20px
.list li:hover
	color rgba(#b3b3b3, 1)
	cursor: pointer
	
.myname
	font-size 1.3rem
.mytitle
	font-size 0.9rem
.mytitle::before
	content "< "
.mytitle::after
	content " />"
.mysummary
	font-size 0.95rem
	margin 10px 0px
	text-align center
.hr
	width 100%
	height 1px
	border-bottom 4px solid #ffbf00
	margin 20px 0px