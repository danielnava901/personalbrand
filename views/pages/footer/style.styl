.Footer
	display flex
	flex-direction row
	width 100vw
	height 210px
	color rgba(#b3b3b3, 0.9)
	background-color #333
	justify-content center
	padding 30px 0px
	&-wrapper
		display flex
		flex-direction row
		justify-content space-between
		align-items center
		width 1024px
		height 100%
		//padding 20px
	&-social
		display flex
		flex-direction column
		width 33%
		height 100%
		justify-content flex-start
		align-items center
	&-description
		display flex
		flex-direction column
		width 33%
		height 100%
		justify-content center
		align-items center
	&-tools
		display flex
		flex-direction column
		width 33%
		height 100%
		justify-content flex-end
		align-items flex-end
	&-menu
		display flex
		flex-direction row
		list-style-type none
		//justify-content space-around
		//width 400px
		margin 0px
		padding 0px


